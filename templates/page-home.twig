{% extends "base.twig" %}

{% block hero %}
    <style>
    @media (min-width: 960px) {
        .uk-section-large {
            padding-top: 100px;
            padding-bottom: 100px;
        }
    }
    </style>

    <section class="uk-section uk-section-large uk-section-secondary">
        <div class="uk-container uk-container-small uk-text-center">
            {% if title %}<h1>{{title}}</h1>{% endif %}
            <p class="uk-text-large">{{ post.header }}</p>
        </div>
    </section>
{% endblock %}


{% block content %}
<div class="uk-grid uk-grid-small uk-child-width-1-2 uk-child-width-1-3@m uk-child-width-1-4@l uk-grid-match" data-uk-lightbox="toggle:a.uk-position-cover" data-uk-grid>
    {% for item in posts %}
        <a href="{{item.link}}">
            <div class="uk-card uk-card-default uk-card-small">
                <div class="uk-card-media-top">
                    <div class="uk-inline-clip uk-transition-toggle uk-light">
                        <!-- <img src="{{ TimberImage(item.get_field('author_thumbnail_image').url)|resize(512, 512) }}" alt="I´m the image title"> -->
                        <img src="{{ item.get_field('author_thumbnail_image').url|resize(512, 512) }}" alt="I´m the image title">
                        <div class="uk-transition-fade uk-position-cover uk-overlay uk-overlay-primary uk-flex uk-flex-center uk-flex-middle">
                            <div data-uk-margin class="uk-transition-slide-bottom-small">
                                <span data-uk-icon="icon: chevron-right; ratio: 1.3"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="uk-card-header">
                    <div class="uk-grid-small uk-flex uk-flex-middle" data-uk-grid>
                        <div class="uk-width-expand uk-text-center">
                            <h4 class="uk-margin-remove-bottom ">{{item.title}}</h4>
                        </div>

                    </div>
                </div>
            </div>
        </a>
    {% endfor %}

    </div>
{% endblock %}
