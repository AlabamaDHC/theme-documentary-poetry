{% extends "base.twig" %}

{% block hero %}
	{% if post.author_post %}
		<h1><a href="{{author_post.link}}">{{ author_post }}</a></h1>
		<style>
			#hero {
				background-image: url({{ post.thumbnail.src }});
				background-repeat: no-repeat;
				background-size: contain;
				background-position: center;
			}
		</style>
	{% endif %}
{% endblock %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<section class="article-content">
				<h1 class="article-h1 uk-text-center">{{ post.title }}</h1>
				<!-- <p class="blog-author uk-align-center">
					<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.date }}
				</p> -->
				<div class="article-body">
					{{post.get_content|bootstrap}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
