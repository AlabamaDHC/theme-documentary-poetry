{% if menu %}
	<ul class="uk-navbar-nav">
	{% for item in menu %}
		<li class="uk-active uk-visible@m {{ item.classes | join(' ') }}">

			{% if item.get_children %}
				<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }} <span data-uk-icon="icon: triangle-down"></span></a>
				<div class="uk-navbar-dropdown">
					<ul class="uk-nav uk-navbar-dropdown-nav">
						{% for child in item.get_children %}
							<li><a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a></li>
						{% endfor %}
					</ul>
				</div>
			{% else %}
				<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
			{% endif %}
		</li>
	{% endfor %}
		<li class="uk-hidden@m"><a class="uk-navbar-toggle" data-uk-toggle data-uk-navbar-toggle-icon href="#offcanvas-nav"></a></li>
	</ul>
{% endif %}
